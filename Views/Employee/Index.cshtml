@model IEnumerable<MVCwithJQuery.Models.Employee>
<div class="row"
	<div class="col-6">
		<h2 class="text-primary">
			Index
		</h2>
	</div>
	<div>
		<div class="col-6 text-right">
			<a class="btn btn-info" asp-action="Add">
				<i class="fas fa-plus"></i>&nbsp; New Employee
			</a>
		</div>
	</div>
	<div class="p-3">
		<table id="tblData" class="table table-striped table-bordered table-active table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Salary</th>
					<th>Department</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Salary</td>
					<td>@item.Department.Name</td>
					<td>
						<a class="btn btn-info" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Employee">Edit</a>
						<a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Employee">Delete</a>
					</td>
				</tr>
				}
			</tbody>
			<tfoot>
				@if (ViewBag.Page > 0)
				{
							<a action="Index" asp-route-page="@(ViewBag.Page-1)" class="btn btn-default">
									&laquo; Prev
							</a>
				}
				@if (ViewBag.Page < ViewBag.MaxPage)
				{
							<a action="Index" asp-route-page="@(ViewBag.Page+1)" class="btn btn-default">
									 Next &raquo;
							</a>
				}
			</tfoot>
			
		</table>
	</div>

</div>
@section scripts{
	<script>

	</script>
}